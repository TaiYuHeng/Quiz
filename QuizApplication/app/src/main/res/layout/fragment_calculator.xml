<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quizapplication.CalculatorFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margins_value"
            android:layout_marginRight="@dimen/padding_margins_value"
            android:layout_marginLeft="@dimen/padding_margins_value"
            android:paddingLeft="@dimen/padding_margins_value"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/button07"
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="57dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="@+id/textView"
            android:onClick=""/>

        <Button
            android:id="@+id/button4"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="116dp"
            app:layout_constraintTop_toBottomOf="@+id/button07"
            app:layout_constraintLeft_toLeftOf="@+id/textView" />

        <Button
            android:id="@+id/button1"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="174dp"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintLeft_toLeftOf="@+id/textView" />

        <Button
            android:id="@+id/button0"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="231dp"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            app:layout_constraintLeft_toLeftOf="@+id/textView" />

        <Button
            android:id="@+id/button8"
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="57dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintLeft_toRightOf="@+id/button07"
            android:layout_marginLeft="0dp" />

        <Button
            android:id="@+id/button5"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button07"
            app:layout_constraintLeft_toRightOf="@+id/button07"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="116dp" />

        <Button
            android:id="@+id/button2"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintLeft_toRightOf="@+id/button07"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="174dp" />

        <Button
            android:id="@+id/button9"
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintLeft_toRightOf="@+id/button8"
            tools:layout_editor_absoluteX="203dp"
            tools:layout_editor_absoluteY="57dp" />

        <Button
            android:id="@+id/button06"
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button07"
            app:layout_constraintLeft_toRightOf="@+id/button8"
            tools:layout_editor_absoluteX="203dp"
            tools:layout_editor_absoluteY="116dp" />

        <Button
            android:id="@+id/button3"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintLeft_toRightOf="@+id/button8"
            tools:layout_editor_absoluteX="203dp"
            tools:layout_editor_absoluteY="174dp" />

        <Button
            android:id="@+id/buttonC"
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button0"
            app:layout_constraintLeft_toRightOf="@+id/button8"
            tools:layout_editor_absoluteX="203dp"
            tools:layout_editor_absoluteY="287dp" />

        <Button
            android:id="@+id/division"
            android:text="/"
            android:layout_width="64dp"
            android:layout_height="47dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintLeft_toRightOf="@+id/button9"
            tools:layout_editor_absoluteX="292dp"
            tools:layout_editor_absoluteY="57dp" />

        <Button
            android:id="@+id/multiplication"
            android:text="*"
            android:layout_width="64dp"
            android:layout_height="47dp"
            app:layout_constraintTop_toBottomOf="@+id/button07"
            app:layout_constraintLeft_toRightOf="@+id/button9"
            tools:layout_editor_absoluteX="291dp"
            tools:layout_editor_absoluteY="116dp" />

        <Button
            android:id="@+id/subtraction"
            android:layout_width="64dp"
            android:layout_height="47dp"
            android:text="-"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintLeft_toRightOf="@+id/button9"
            tools:layout_editor_absoluteX="291dp"
            tools:layout_editor_absoluteY="174dp" />

        <Button
            android:id="@+id/Addition"
            android:layout_width="64dp"
            android:layout_height="47dp"
            android:text="+"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            app:layout_constraintLeft_toRightOf="@+id/button9"
            tools:layout_editor_absoluteX="291dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/equal"
            android:text="="
            android:layout_width="64dp"
            android:layout_height="47dp"
            app:layout_constraintTop_toBottomOf="@+id/button0"
            app:layout_constraintLeft_toRightOf="@+id/button9"
            tools:layout_editor_absoluteX="291dp"
            tools:layout_editor_absoluteY="287dp" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
